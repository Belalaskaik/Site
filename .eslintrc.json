{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "react-app",
        "react-app/jest",
        "prettier",
        "plugin:react/recommended"
      ],
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "array-bracket-spacing": [
            "error"
        ],
        "comma-spacing": [
            "error"
        ],
        "eqeqeq":[
            "error",
            "always"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "no-multiple-empty-lines": [
            "error", {
                "max": 1
            }
        ],
        "quotes":[
            "error",
            "single"
        ]
    }
}